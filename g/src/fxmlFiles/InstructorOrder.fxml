<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" maxWidth="1.7976931348623157E308" prefHeight="800.0" prefWidth="1200.0" styleClass="multi-bg-example" stylesheets="@application.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fxmlFiles.InstructorOrderController">
   <children>
      <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="helpBtn" mnemonicParsing="false" onMouseClicked="#OpenFaq" prefHeight="40.0" prefWidth="40.0" styleClass="Button" text="?">
               <HBox.margin>
                  <Insets top="20.0" />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets right="5.0" />
         </VBox.margin>
      </HBox>
      <VBox>
         <children>
            <HBox alignment="BOTTOM_LEFT" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 40px;" styleClass="textA" text="Instructor order" />
               </children>
               <VBox.margin>
                  <Insets left="90.0" />
               </VBox.margin>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="textA" text="(up to 15 people due to the CoronaVirus)" />
               </children>
               <VBox.margin>
                  <Insets left="50.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="textA" text="Park's name:">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Text>
            <ComboBox fx:id="parkName" prefWidth="150.0" style="-fx-background-color: #C0C0C0;">
               <HBox.margin>
                  <Insets left="102.0" />
               </HBox.margin>
            </ComboBox>
         </children>
         <padding>
            <Insets left="100.0" />
         </padding>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="textA" text="Number of visitors:">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Text>
            <ComboBox fx:id="numVistor" prefWidth="150.0" style="-fx-background-color: #C0C0C0;">
               <HBox.margin>
                  <Insets left="45.0" />
               </HBox.margin>
            </ComboBox>
         </children>
         <padding>
            <Insets left="100.0" />
         </padding>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="textA" text="Date:">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Text>
            <DatePicker fx:id="dateVisit" prefHeight="26.0" prefWidth="156.0" style="-fx-background-color: #C0C0C0;">
               <HBox.margin>
                  <Insets left="162.0" />
               </HBox.margin>
            </DatePicker>
         </children>
         <padding>
            <Insets left="100.0" />
         </padding>
      </HBox>
      <HBox maxWidth="1.7976931348623157E308" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="textA" text="Hour:">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Text>
            <ComboBox fx:id="timeVisit" prefWidth="150.0" style="-fx-background-color: #C0C0C0;">
               <HBox.margin>
                  <Insets left="162.0" />
               </HBox.margin>
            </ComboBox>
            <Button fx:id="checkOrder" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onMouseClicked="#CheckOrder" styleClass="Button" text="Check availability">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Button>
         </children>
         <padding>
            <Insets left="100.0" />
         </padding>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="textA" text="Email:">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Text>
            <TextField fx:id="email" style="-fx-background-color: #C0C0C0;">
               <HBox.margin>
                  <Insets left="157.0" />
               </HBox.margin>
            </TextField>
         </children>
         <VBox.margin>
            <Insets left="100.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="backToHomePage" mnemonicParsing="false" onMouseClicked="#BackToHomePage" styleClass="Button" text="Back">
               <HBox.margin>
                  <Insets right="950.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="FOButton" mnemonicParsing="false" onMouseClicked="#FinishOrder" styleClass="Button" text="Finish order">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
